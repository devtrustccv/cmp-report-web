# Dockerfile.dev para Laravel

# Use a imagem oficial do PHP 8.3 FPM
FROM php:8.3-fpm

# Diretório de trabalho dentro do container
WORKDIR /var/www/html

# Instala dependências do sistema
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    zip \
    unzip \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Instala extensões PHP necessárias
RUN docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd

# Instala Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Copia apenas os arquivos de composer primeiro para cache de build
COPY composer.json composer.lock /var/www/html/

# Instala dependências via Composer
RUN composer install --no-interaction --optimize-autoloader --no-dev

# Copia o restante da aplicação
COPY . /var/www/html

# Certifica-se que o .env existe
# Se você montar o volume do host com o .env, isso não sobrescreve
RUN if [ ! -f ".env" ]; then cp .env.example .env; fi

# Gera a APP_KEY caso ainda não exista
RUN php artisan key:generate || true

# Exponha a porta que o Laravel serve
EXPOSE 8000

# Comando padrão para rodar Laravel em dev
CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8000"]
